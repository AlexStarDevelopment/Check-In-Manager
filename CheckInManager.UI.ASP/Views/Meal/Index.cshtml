@model CheckInManager.BL.CEvents
@{
    ViewBag.Title = "Meal Logging";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Bootstrap core CSS-->
<link href="~/Content/css/bootstrap.css" rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/Content/sb-admin.css" rel="stylesheet">
<link href="~/Content/Site.css" rel="stylesheet">
<!-- Custom fonts for this template-->
<link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

<!-- Page level plugin CSS-->
<link href="~/Content/css/dataTables.bootstrap4.css" rel="stylesheet">
<!-- Custom styles for this template-->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="~/Content/js/jquery/jquery.min.js"></script>
<script src="~/Content/js/bootstrap.bundle.min.js"></script>
<!-- Core plugin JavaScript-->
<script src="~/Content/js/jquery-easing/jquery.easing.min.js"></script>
<!-- Page level plugin JavaScript-->
<script src="~/Content/js/chart.js/Chart.min.js"></script>
<script src="~/Content/js/datatables/jquery.dataTables.js"></script>
<script src="~/Content/js/datatables/dataTables.bootstrap4.js"></script>
<!-- Custom scripts for all pages-->
<script src="~/Content/js/sb-admin.min.js"></script>
<!-- Custom scripts for this page-->
<script src="~/Content/js/admin.min.js"></script>
<script src="~/Content/js/sb-admin-datatables.min.js"></script>
<script src="~/Content/js/sb-admin-charts.min.js"></script>

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")



@using (Html.BeginForm("Edit", "Meal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-12">
            <h4 class="text-center">Log Meal</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form>
                
                <div class="form-group col-8 offset-4">
                    @Html.DisplayNameFor(model => model.Date)
                    <div class="col-md-6">
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        <input class="form-control input-md" type="date" value="2018-03-08" id="example-date-input">
                    </div>
                </div>

                    <!-- Text input-->
                    <div class="form-group col-8 offset-4">
                        <label class="control-label col-md-8" for="ChildTray">Child Tray Count</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ChildTray, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ChildTray, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group col-8 offset-4">
                        <label class="control-label col-md-8" for="AdultTray">Adult Tray Count</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.AdultTray, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdultTray, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Text input-->



                    <div class="form-group col-8 offset-4">
                        <div class="col-md-6">
                            <input type="submit" id="btn-submit" value="Log Meal" class="btn btn-primary btn-block" Onclick="javascript: return SubmitForm();" />

                            <script>
                                function SubmitForm() {

                                    var r = confirm("Are you sure you want to submit?");
                                    if (r == false) {
                                        return false;
                                    }
                                }
                            </script>
                        </div>
                    </div>

                
            </form>
        </div>


    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}