                @Html.ValidationMessageFor(model => model.AdultTray, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group col-8 offset-4">
            <div class="col-md-6">
                <input type="submit" id="btn-submit" value="Log Meal" class="btn btn-primary btn-block" Onclick="javascript: return SubmitForm();" />
                <script>
                    function SubmitForm() {

                        var r = confirm("Are you sure you want to submit?");
                        if (r == false) {
                            return false;
                        }
                    }
                </script>
            </div>
        </div>

    </div>
